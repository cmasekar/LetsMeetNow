<UserControl x:Class="LetsMeetUp.View.OptionsBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    Height="50"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid Background="DarkMagenta">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Margin="8" Source="../Assets/Bars.png"/>
        <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Lets Meet Now" FontFamily="Calibri" FontWeight="Bold" Foreground="White" FontSize="42"/>
        <Image Grid.Column="2" Margin="8" Source="../Assets/ChatIcon.png"/>
    </Grid>
</UserControl>